{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20 || 22"
  },
  "scripts": {
    "build-and-publish-plugins": "./scripts/build-and-publish.sh",
    "start-dynamic": "./scripts/check_dynamic_plugins.sh && yarn start",
    "start": "NODE_OPTIONS='--no-node-snapshot --max-old-space-size=4096' backstage-cli repo start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/master",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new",
    "check-dynamic-plugins": "./scripts/check_dynamic_plugins.sh",
    "export-dynamic": "echo \"Command moved to dynamic-plugins/package.json\"",
    "export-dynamic:clean": "echo \"Command moved to dynamic-plugins/package.json\"",
    "copy-dynamic-plugins": "echo \"Command moved to dynamic-plugins/package.json\""
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.32.1",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.32.3",
    "@types/node": "^24.0.6",
    "lerna": "^8.1.2",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@backstage/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.4.1",
  "dependencies": {
    "@backstage/plugin-notifications": "^0.5.6"
  }
}
